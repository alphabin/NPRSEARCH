<!--Homepage-->
<div class="container">
    
    <div class="col-md-12 mainContent">
        {{#if article}}
            {{#each article}}
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h2>{{this.headline}}</h2>
                </div>
                <div class="panel-body">
                   <img src={{this.picUrl}} alt={{this.headline}} style="width:350px!important;height:300px important;">
                   <br><br>
                    <p> {{this.brief}}</p>
                    <a href={{this.url}} target="_blank">{{this.url}}</a>
                    <br><br>                 
                    <button type="button" class="btn btn-success save" data-id={{this._id}}>Save Article</button>
                </div>
            </div>
            {{/each}}
        {{else}}
        <div class="panel panel-default">
            <div class="panel-body">
            <h4>No new articles.</h4>
            <button type="button" class="btn btn-primary" id="scrape-npr">Scrape Latest</button>
            </div>
         </div>
        {{/if}}
    </div>
</div>
